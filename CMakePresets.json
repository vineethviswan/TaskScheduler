{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "generator": "Ninja",
      "description": "Use MSVC with Ninja in Debug mode",
      "binaryDir": "${sourceDir}/build/msvc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "generator": "Ninja",
      "description": "Use MSVC with Ninja in Release mode",
      "binaryDir": "${sourceDir}/build/msvc-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "msvc-debug-tests",
      "displayName": "MSVC Debug with Tests",
      "generator": "Ninja",
      "description": "Use MSVC with Ninja in Debug mode, with Google Test enabled",
      "binaryDir": "${sourceDir}/build/msvc-debug-tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug Build",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release Build",
      "configurePreset": "msvc-release"
    },
    {
      "name": "msvc-debug-tests",
      "displayName": "Build with Tests",
      "configurePreset": "msvc-debug-tests"
    }
  ],
  "testPresets": [
    {
      "name": "msvc-run-tests",
      "displayName": "Run All Tests",
      "configurePreset": "msvc-debug-tests",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      }
    }
  ]
}